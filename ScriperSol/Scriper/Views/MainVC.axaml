<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Scriper.Views;assembly=Scriper"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Scriper.Views.MainVC">
  <UserControl.Styles>
    <Style Selector="Button.h1">
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="Background" Value="{DynamicResource btnAppColor}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource btnAppBorderBrushColor}"/>
      <Setter Property="BorderThickness" Value="0.5"/>
    </Style>
  </UserControl.Styles>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="50"/>
      <ColumnDefinition Width="50"/>
      <ColumnDefinition Width="50"/>
      <ColumnDefinition Width="50"/>
      <ColumnDefinition Width="50"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
      <Button Classes="h1" Grid.Column="0" Grid.Row="0" Command="{Binding CreateScriptCmd}">
        <Button.Content>
          <Image Source="/Assets/icons8_add_file_96px.png"/>
        </Button.Content>
      </Button>
      <Button Classes="h1" Grid.Column="1" Grid.Row="0" Click="OnManualClick">
        <Button.Content>
          <Image Source="/Assets/icons8_user_manual_96px.png"/>
        </Button.Content>
      </Button>
      <Button Classes="h1" Grid.Column="2" Grid.Row="0" Command="{Binding OpenSettingsCmd}">
        <Button.Content>
          <Image Source="/Assets/icons8_administrative_tools_96px.png"/>
        </Button.Content>
      </Button>
      <Button Classes="h1" Grid.Column="3" Grid.Row="0" Click="OnAboutClick">
        <Button.Content>
          <Image Source="/Assets/icons8_high_importance_96px.png"/>
        </Button.Content>
      </Button>
      <Button Classes="h1" Grid.Column="4" Grid.Row="0" Command="{Binding HideCmd}" IsEnabled="{Binding HidingEnabled}">
        <Button.Content>
          <Image Source="/Assets/icons8_minimize_window_96px.png"/>
        </Button.Content>
      </Button>
      <views:ScriptManagerVC DataContext="{Binding ScriptManagerVM}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6" Grid.RowSpan="2"/>
  </Grid>
</UserControl>
