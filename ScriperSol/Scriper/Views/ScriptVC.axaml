<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Scriper.Views.ScriptVC">
  <UserControl.Styles>
    <Style Selector="TextBlock.h1">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
  </UserControl.Styles>
  <StackPanel>
    <DockPanel LastChildFill="True">
      <TextBlock Text="Name" Classes="h1"/>
      <TextBox Text="{Binding ScriptConfiguration.Name}"/>
    </DockPanel>
    <DockPanel LastChildFill="True">
      <TextBlock Text="Description" Classes="h1"/>
      <TextBox Text="{Binding ScriptConfiguration.Description}"/>
    </DockPanel>
    <DockPanel LastChildFill="True">
      <TextBlock Text="Path" Classes="h1"/>
      <TextBox Text="{Binding ScriptConfiguration.Path}"/>
    </DockPanel>
    <DockPanel LastChildFill="True">
      <TextBlock Text="RunInNewWindow" Classes="h1"/>
      <CheckBox IsChecked="{Binding ScriptConfiguration.RunInNewWindow}"/>
    </DockPanel>
    <DockPanel LastChildFill="True">
      <TextBlock Text="InSystemTray" Classes="h1"/>
      <CheckBox IsChecked="{Binding ScriptConfiguration.InSystemTray}"/>
    </DockPanel>
  </StackPanel>
</UserControl>
